{% extends 'Layout.html.twig' %}

{#      the view title      #}
{% block title title %}

{#      The view style sheet    #}
{% block stylesheets %}
    #navigationLeft {
    color: white;
    background-color: #222222;
    position: fixed;
    //top: 0;
    z-index: 1020;
    }

{% endblock %}

{# Replace dropdown in the header index  #}
{% block headerDropdown  %}
{{ parent() }}
{% endblock %}

{#      the title h1 of the view   #}
{% block h1 title %}

{% block LayoutBody %}
    <div class="row m-0 p-0">
        <div id="navigationLeft" class="col-12 col-lg-3 m-0 p-5">
            <div class="container-fluid m-2">
                {% block navigationLeft %} nav left {% endblock %}
            </div>
        </div>
        <div id="content" class="col-12 col-lg-9 bg-white container-fluid p-5" style="overflow: auto">
            {% block body %} Page Articles {% endblock %}
        </div>
    </div>
{% endblock %}


{#      The view JavaScript    #}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
