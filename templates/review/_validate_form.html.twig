<div class="d-inline-block{% if delete_button_class is defined %} w-100 m-0 p-0{% endif %}">
    <form method="post" action="{{ path('review_activate', {'id': review.id}) }}" onsubmit="return confirm('item id : {{ review.id }}\nAre you sure you want to delete this item?');">

        {% for key, role in app.user.roles %}
            <input type="hidden" name="roles[{{ key }}]" value="{{ csrf_token(role) }}">
        {% endfor %}

        <input type="hidden" name="_method" value="POST">
        <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ review.id) }}">
        <button class="btn btn-info"><i class="fa fa-check-square-o"></i> {{ validate_button_class|default('Validate') }}</button>
    </form>
</div>
