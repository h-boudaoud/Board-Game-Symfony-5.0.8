
<div class="d-inline-block{% if game_delete_button_class is defined %} w-100 m-0 p-0{% endif %}">
    <form method="post" action="{{ path('game_delete', {'id': game.id}) }}" onsubmit="return confirm('item id : {{ game.id }}\nAre you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
        <button class="btn btn-danger {{ game_delete_button_class|default('') }}" title="Delete">
            <i class="fa fa-trash"></i> {{ game_delete_button_label|default('Delete') }}
        </button>
    </form>
</div>
