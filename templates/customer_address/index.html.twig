{% extends 'base.html.twig' %}

{% block title %}CustomerAddress index{% endblock %}

{% block body %}
    <h1>CustomerAddress index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DeliveryAt</th>
                <th>StreetAddress</th>
                <th>StreetAddressLine2</th>
                <th>City</th>
                <th>State</th>
                <th>Postal</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer_address in customer_addresses %}
            <tr>
                <td>{{ customer_address.id }}</td>
                <td>{{ customer_address.deliveryAt }}</td>
                <td>{{ customer_address.streetAddress }}</td>
                <td>{{ customer_address.streetAddressLine2 }}</td>
                <td>{{ customer_address.city }}</td>
                <td>{{ customer_address.state }}</td>
                <td>{{ customer_address.postal }}</td>
                <td>{{ customer_address.country }}</td>
                <td>
                    <a href="{{ path('customer_address_show', {'id': customer_address.id}) }}">show</a>
                    <a href="{{ path('customer_address_edit', {'id': customer_address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_address_new') }}">Create new</a>
{% endblock %}
