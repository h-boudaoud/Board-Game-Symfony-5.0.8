<div class="d-inline-block{% if delete_button_class is defined %} w-100 m-0 p-0{% endif %} js-delete">
    <form method="post" action="{{ path('customer_address_delete', {'id': customer_address.id}) }}"
          onsubmit="return confirm('item {{ customer_address.id }} : {{ customer_address.toString }}\nAre you sure you want to delete this item?');">

        {% for key, role in app.user.roles %}
            <input type="hidden" name="roles[{{ key }}]" value="{{ csrf_token(role) }}">
        {% endfor %}

        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer_address.id) }}">
        <button class="btn btn-danger {{ delete_button_class|default('') }}" title="Delete">
            <i class="fa fa-trash"></i> {{ delete_button_label|default('Delete') }}
        </button>
    </form>
</div>

